
<h1>商品詳細</h1>

<p>
<%= attachment_image_tag @product, :product_image, :fill, 200, 200 %><br>
<strong>CD/アルバム名</strong>
<%= @product.cd_title %><br>

<% @product.product_discs.each_with_index do |disc,i| %>
  <strong>
    ディスク<!-- ディスク番号 --><% i += 1 %><%= i %>
  </strong>
	<%= disc.disc_title %><br>
	<% disc.product_disc_songs.each_with_index do |song,i| %>
		<strong>
		  曲名<!-- 曲番号 --><% i += 1 %><%= i %>
		</strong>
		<%= song.song_name %><br>
	<% end %>

<% end %>

<strong>アーティスト名</strong>
<%= @product.artist_name %><br>
<strong>レーベル名</strong>
<%= @product.label_name %><br>
<strong>価格</strong>
<%= @product.price %>円<br>
<strong>在庫数</strong>
<%= @product.stock %>個あるよ<br>

</p>

<%= link_to product_carts_path(@product), method: :post do %>
	<strong>カートに入れる</strong>
	<%end%>