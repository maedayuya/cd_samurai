<h1> 購入確認画面</h1>

<%= form_for @order do |f| %>

	<h2> 商品情報</h2>

    <h3>商品名</h3>
	<% current_user.carts.each do |cart| %>
    <p>
   	<strong>CDジャケット</strong>
    <%= attachment_image_tag cart.product, :product_image, :fill, 200, 200 %>
   	<strong>アーティスト名</strong>
   	   <%= cart.product.artist_name %>
	<strong>CDタイトル</strong>
   	   <%= cart.product.cd_title %>
	<strong>レーベル名</strong>
   	   <%= cart.product.label_name %>
	<strong>価格</strong>
   	   <%= cart.product.price %>
  <strong>数量</strong>
       <%= cart.quantity %>
   </p>

    <% end %>
<h3> 購入金額・送料</h3>
 <%= @order.sum_price(current_user)%>
<h3> 配送先確認</h3>
<%= @order.to_address %>
<%= f.hidden_field :to_address %>
<h3> お支払い方法確認</h3>
<%= @order.payment_method_i18n %>
<%= f.hidden_field :payment_method%><br>

  <%= f.submit '戻る', name: 'back'%>

	<%= f.submit '購入を確定する' %>
<% end %>