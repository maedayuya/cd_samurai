<div class="col-sm-10" style="text-align: center;">
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:size => "60"%>
    </div>

    <div class="field">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" ,:size => "60"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "ログイン状態を保持する" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

    <label>※まだ会員登録がお済みでない方はこちらへ</label><br>
    <%= link_to "新規会員登録", new_registration_path(resource_name) %><br />
</div>